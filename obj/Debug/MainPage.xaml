<Page x:Name="gridLayout"
    x:Class="tetris_wp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:tetris_wp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:Name="mainLayout" Margin="0,0.333,0,-0.333">
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="gfx/background.png"/>
        </Grid.Background>
        <Grid x:Name="gridBottom" HorizontalAlignment="Center" Height="90" VerticalAlignment="Bottom" Width="400">
            <Grid x:Name="controlsGrid" Height="90" Width="400" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button x:Name="leftButton" Content="" HorizontalAlignment="Left" MinHeight="1" MinWidth="1" VerticalAlignment="Stretch" BorderThickness="0" FontSize="0.01" ManipulationMode="All" Width="72" BorderBrush="{x:Null}" Foreground="{x:Null}" Margin="10,0,0,0" ClickMode="Press">
                    <Button.Background>
                        <ImageBrush Stretch="Fill" ImageSource="gfx/btn_left_play.png"/>
                    </Button.Background>
                </Button>
                <Button x:Name="downButton" Content="" HorizontalAlignment="Center" MinHeight="1" MinWidth="1" VerticalAlignment="Stretch" BorderThickness="0" FontSize="0.01" ManipulationMode="All" Width="72" BorderBrush="{x:Null}" Foreground="{x:Null}" Margin="100,0,0,0" ClickMode="Press">
                    <Button.Background>
                        <ImageBrush Stretch="Fill" ImageSource="gfx/btn_down_play.png"/>
                    </Button.Background>
                </Button>
                <Button x:Name="rotateButton" Content="" HorizontalAlignment="Center" MinHeight="1" MinWidth="1" VerticalAlignment="Stretch" BorderThickness="0" FontSize="0.01" ManipulationMode="All" Width="72" BorderBrush="{x:Null}" Foreground="{x:Null}" Margin="0,0,100,0" ClickMode="Press">
                    <Button.Background>
                        <ImageBrush Stretch="Fill" ImageSource="gfx/btn_rotate_play.png"/>
                    </Button.Background>
                </Button>
                <Button x:Name="rightButton" Content="" HorizontalAlignment="Right" MinHeight="1" MinWidth="1" VerticalAlignment="Stretch" BorderThickness="0" FontSize="0.01" ManipulationMode="All" Width="72" BorderBrush="{x:Null}" Foreground="{x:Null}" Margin="10,0" ClickMode="Press">
                    <Button.Background>
                        <ImageBrush Stretch="Fill" ImageSource="gfx/btn_right_play.png"/>
                    </Button.Background>
                </Button>
            </Grid>
        </Grid>
        <Grid x:Name="fieldGrid" HorizontalAlignment="Center" Height="469" VerticalAlignment="Top" Width="380" Margin="10,65,10,0">
            <Grid.Background>
                <ImageBrush Stretch="Fill" ImageSource="gfx/play_field.png"/>
            </Grid.Background>
        </Grid>
        <Grid x:Name="topGrid" Height="65" Margin="10,0" VerticalAlignment="Top" Width="380" HorizontalAlignment="Center">
            <Button x:Name="menuButton" Content="MENU" HorizontalAlignment="Left" Height="35" VerticalAlignment="Center" Width="90" Background="{x:Null}" BorderBrush="Black" Foreground="White" BorderThickness="0" FontFamily="fonts/digital-7 (mono).ttf#Digital-7 Mono" FontSize="25" Margin="20,0,0,0"/>
            <Button x:Name="startButton" Content="START" HorizontalAlignment="Right" Height="35" Margin="0,0,20,0" VerticalAlignment="Center" Width="90" BorderThickness="0" FontFamily="fonts/digital-7 (mono).ttf#Digital-7 Mono" FontSize="25"/>
        </Grid>

    </Grid>
</Page>

